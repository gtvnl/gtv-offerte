<%- model_class = Positie -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:regel) %></th>
      <th><%= model_class.human_attribute_name(:fabrikaat) %></th>
      <th><%= model_class.human_attribute_name(:systeem) %></th>
      <th><%= model_class.human_attribute_name(:ip) %></th>
      <th><%= model_class.human_attribute_name(:verdeler) %></th>
      <th><%= model_class.human_attribute_name(:aantal) %></th>
      <th><%= model_class.human_attribute_name(:stuksprijs) %></th>
      <th><%= model_class.human_attribute_name(:offerte_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posities.each do |positie| %>
      <tr>
        <td><%= positie.regel %></td>
        <td><%= positie.fabrikaat %></td>
        <td><%= positie.systeem %></td>
        <td><%= positie.ip %></td>
        <td><%= positie.verdeler %></td>
        <td><%= positie.aantal %></td>
        <td><%= positie.stuksprijs %></td>
        <td><%= positie.offerte_id %></td>
        <td><%=l positie.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      offerte_positie_path(@offerte, positie), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_offerte_positie_path(@offerte, positie), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      offerte_positie_path(@offerte, positie),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_offerte_positie_path,
            :class => 'btn btn-primary' %>
