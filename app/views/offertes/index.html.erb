<%- model_class = Offerte -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:projectnaam) %></th>
      <th><%= model_class.human_attribute_name(:projectnummer) %></th>
      <th><%= model_class.human_attribute_name(:plaats) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @offertes.each do |offerte| %>
      <tr>
        <td><%= link_to offerte.id, offerte_path(offerte) %></td>
        <td><%= offerte.projectnaam %></td>
        <td><%= offerte.projectnummer %></td>
        <td><%= offerte.plaats %></td>
        <td><%= offerte.status %></td>
        <td><%=l offerte.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      offerte_path(offerte), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_offerte_path(offerte), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      offerte_path(offerte),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_offerte_path,
            :class => 'btn btn-primary' %>
